require_relative '../node_modules/react-native/scripts/react_native_pods'
begin
  require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'
rescue LoadError
  # CLI native modules helper may be absent in some environments
end

# React Native 0.81.x requires iOS 18.0
platform :ios, '18.0'
use_frameworks! :linkage => :static

# Toggle Flipper in CI via env (defaults OFF)
USE_FLIPPER = ENV['USE_FLIPPER'] == '1'

# Respect RN New Architecture from CI (RCT_NEW_ARCH_ENABLED=1)
NEW_ARCH_ENABLED = ENV['RCT_NEW_ARCH_ENABLED'] == '1'

target 'MyOfflineLLMApp' do
  config = use_native_modules!

  use_react_native!(
    :path => config['reactNativePath'],
    :hermes_enabled => true,
    :fabric_enabled => NEW_ARCH_ENABLED,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  if USE_FLIPPER
    use_flipper!({ 'Flipper' => '0.203.0' })
  end

  post_install do |installer|
    react_native_post_install(
      installer,
      :mac_catalyst_enabled => false,
      :production => ENV['CI'] == 'true'
    )

    installer.pods_project.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '18.0'
    end
    installer.pods_project.targets.each do |t|
      t.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '18.0'
        config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'NO'
      end
    end
  end
end
