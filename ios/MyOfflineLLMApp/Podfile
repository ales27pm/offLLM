platform :ios, '12.0'

require_relative '../../node_modules/react-native/scripts/react_native_pods'
require_relative '../../node_modules/@react-native-community/cli-platform-ios/native_modules'

project 'MyOfflineLLMApp.xcodeproj'

target 'MyOfflineLLMApp' do
  use_frameworks!
  # Use React Native's vendored Boost podspec to avoid source conflicts

  use_react_native!(
    :path => '../../node_modules/react-native'
  )
end

post_install do |installer|
  # Set deployment target for all pods
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
  end

  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      if target.name == 'hermes-engine'
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'HERMES_ENABLE_DEBUGGER=1'
      end
    end
  end

  # Ensure Hermes binary is executable
  system('chmod', '+x', 'Pods/hermes-engine/destroot/bin/hermes')
end
