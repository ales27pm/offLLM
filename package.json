{
  "name": "my-offline-llm-app",
  "version": "2.0.0",
  "description": "Offline LLM application with advanced optimizations",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "test:ci": "jest --ci --runInBand --coverage",
    "lint": "eslint .",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -project MyOfflineLLMApp/MyOfflineLLMApp.xcodeproj -scheme MyOfflineLLMApp -configuration Release -destination 'generic/platform=iOS Simulator' CODE_SIGNING_ALLOWED=NO",
    "bundle:android": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "bundle:ios": "react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/main.jsbundle --assets-dest ios",
    "codegen": "node scripts/generate-codegen-artifacts.js"
  },
  "dependencies": {
    "@noble/post-quantum": "^0.5.1",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/clipboard": "^1.5.1",
    "@react-native-community/slider": "^5.0.1",
    "@react-native-voice/voice": "^3.2.4",
    "@xenova/transformers": "^2.17.2",
    "cheerio": "^1.1.2",
    "crypto-js": "^4.2.0",
    "langchain": "^0.3.31",
    "react": "18.2.0",
    "react-native": "0.81.1",
    "react-native-config": "^1.5.7",
    "react-native-contacts": "^8.0.6",
    "react-native-device-info": "^14.0.4",
    "react-native-flashlight": "^1.1.0",
    "react-native-fs": "^2.20.0",
    "react-native-music-control": "^1.4.1",
    "react-native-readability": "^0.0.1",
    "react-native-render-html": "^6.3.4",
    "react-native-sensors": "^7.3.6",
    "react-native-sqlite-storage": "^6.0.1",
    "react-native-tts": "^4.1.1",
    "react-native-vibration": "^0.2.0",
    "rxdb": "^16.18.0",
    "tiktoken": "^1.0.22",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.28.3",
    "@react-native/eslint-config": "^0.81.1",
    "@react-native/metro-config": "^0.81.1",
    "@tsconfig/react-native": "^3.0.6",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.0",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^30.1.1",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^30.1.1",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.6.2",
    "react-test-renderer": "18.2.0",
    "typescript": "5.9.2",
    "@react-native-community/cli": "^20.0.1"
  },
  "engines": {
    "node": ">=20.19.4"
  },
  "react-native": {
    "hermes": true
  },
  "reactNativeArchFlags": {
    "newArchEnabled": true
  },
  "codegenConfig": {
    "name": "AppSpec",
    "type": "modules",
    "jsSrcsDir": ".",
    "android": {
      "javaPackageName": "com.myofflinellmapp.generated"
    },
    "ios": {
      "libraryName": "AppSpec",
      "outputDir": "build/generated/ios"
    }
  }
}
